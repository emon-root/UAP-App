<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gr1"
    android:layout_weight="10"
    android:weightSum="10"
    android:orientation="vertical"
    tools:context=".Activity.NotificationActivity">

    <LinearLayout
        android:layout_weight="1"
        android:background="@drawable/header_cse"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:text="Notification Zone"
            android:fontFamily="@font/margot"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="#000000"
            android:id="@+id/student_information_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_weight="7"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ListView
            android:id="@+id/student_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>


</LinearLayout>