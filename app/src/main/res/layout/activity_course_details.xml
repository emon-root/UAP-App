<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_weight="10"
    android:weightSum="10"
    android:background="@drawable/gr1"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_weight="2"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            android:background="@drawable/header_cse"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_height="60dp" />
        <TextView
            android:text="Semester Name"
            android:textStyle="bold"
            android:textColor="#000000"
            android:fontFamily="@font/margot"
            android:layout_alignParentBottom="true"
            android:id="@+id/semester_name_here"
            android:textSize="25sp"
            android:padding="15sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:layout_weight=".5"
        android:background="@drawable/gr1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_weight="2.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/code_course"
                android:textColor="@android:color/black"
                android:text="Course Code"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textSize="20sp"
                android:background="@drawable/marque"
                android:fontFamily="@font/margot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:layout_weight="5.5"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name_course"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:textSize="20sp"
                android:background="@drawable/marque"
                android:fontFamily="@font/margot"
                android:textColor="@android:color/black"
                android:text="Course Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/credit_course"
                android:textColor="@android:color/black"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:fontFamily="@font/margot"
                android:text="Credit"
                android:textSize="20sp"
                android:background="@drawable/marque"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:background="@drawable/gr1"
        android:layout_weight="7.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>